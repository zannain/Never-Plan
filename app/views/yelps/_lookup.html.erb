<%= form_tag search_path, method: :get do %>
<div class="form-group">
<%= label_tag "Keyword" %>
<%= text_field_tag :term,nil,placeholder: 'Enter keyword', class:'form-control' %>
<br>
<%= label_tag "Location" %>
<%= text_field_tag :location, nil, placeholder:'Enter Location', class:"form-control" %>

</div>
<br>
<%= button_tag "Search", class: 'btn btn-success', type:'submit' %>
<% end %>
